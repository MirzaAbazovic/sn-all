{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:domain",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "scope:common",
                "onlyDependOnLibsWithTags": ["scope:domain"]
              },
              {
                "sourceTag": "scope:business",
                "onlyDependOnLibsWithTags": [ "scope:domain", "scope:common"]
              },
              {
                "sourceTag": "scope:app",
                "onlyDependOnLibsWithTags": [ "scope:common", "scope:domain", "scope:ui"]
              },
              {
                "sourceTag": "scope:ui",
                "onlyDependOnLibsWithTags": ["scope:domain", "scope:business", "scope:common"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
