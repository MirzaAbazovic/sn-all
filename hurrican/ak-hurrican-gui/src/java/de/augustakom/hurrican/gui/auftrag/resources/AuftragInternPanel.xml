<?xml version="1.0" encoding="UTF-8"?>
<!--
GUI-Definitionen fuer das Panel mit den Daten zu internen Arbeitsauftraegen.
-->
<sf>
    
	<!-- Panel-Titles -->
	<Text name="intern.work.def">Arbeitsaufgabe:</Text>
	<Text name="contacts">Kontaktdaten:</Text>
	<Text name="working.time">Zeiten:</Text>

    <Label name="hvt.standort"><text>Service-Raum:</text></Label>
    <ReferenceField name="hvt.standort">
		<tooltip>Auswahl des Service-Raums</tooltip>
		<columns>25</columns>
		<id.property>hvtIdStandort</id.property>
		<name.property>ortsteil</name.property>
		<reference.class>de.augustakom.hurrican.model.cc.view.HVTGruppeStdView</reference.class>
		<selection.dialog.class>de.augustakom.hurrican.gui.hvt.HVTSelectionDialog</selection.dialog.class>
	</ReferenceField>
	
	<Label name="work.type"><text>Arbeit:</text></Label>
	<ReferenceField name="work.type">
		<tooltip>Art der durchzufuehrenden Arbeit</tooltip>
		<id.property>id</id.property>
		<name.property>strValue</name.property>
		<reference.class>de.augustakom.hurrican.model.cc.Reference</reference.class>
	</ReferenceField>
	
	<Label name="project.dir"><text>Projektordner:</text></Label>
    <TextField name="project.dir">
    	<tooltip>Link zum Projektordner</tooltip>
    	<columns>30</columns>
    	<maxchars>500</maxchars>
    </TextField>
    
    <Button name="open.project.dir">
    	<text>...</text>
    	<tooltip>Oeffnet den Windows-Explorer mit dem angegebenen Pfad</tooltip>
    </Button>
	
	<Label name="bedarfs.nr"><text>Bedarfs-Nr.:</text></Label>
    <TextField name="bedarfs.nr">
    	<tooltip>Bedarfsnummer fuer die interne Arbeit</tooltip>
    	<columns>30</columns>
    	<maxchars>20</maxchars>
    </TextField>
    
    <Label name="description"><text>Beschreibung:</text></Label>
    <TextArea name="description">
    	<tooltip>Beschreibung zu dem internen Arbeitsauftrag</tooltip>
    	<rows>10</rows>
    	<columns>30</columns>
    	<maxchars>2000</maxchars>
    </TextArea>
	
    <Label name="contact.name"><text>Name:</text></Label>
    <TextField name="contact.name">
    	<tooltip>Ansprechpartner</tooltip>
    	<columns>30</columns>
    	<maxchars>100</maxchars>
    </TextField>
    
    <Label name="contact.mail"><text>Mail:</text></Label>
    <TextField name="contact.mail">
    	<tooltip>eMail-Adresse des Ansprechpartners</tooltip>
    	<maxchars>100</maxchars>
    </TextField>
    
    <Label name="contact.phone"><text>Tel.:</text></Label>
    <TextField name="contact.phone">
    	<tooltip>Telefonnummer des Ansprechpartner</tooltip>
    	<maxchars>30</maxchars>
    </TextField>
    
    <Label name="ext.service.provider"><text>ext. Dienstleister:</text></Label>
	<ReferenceField name="ext.service.provider">
		<tooltip>Name des beauftragten externen Dienstleisters</tooltip>
		<id.property>id</id.property>
		<name.property>shortName</name.property>
		<reference.class>de.augustakom.hurrican.model.cc.ExtServiceProvider</reference.class>
	</ReferenceField>
	
	<Label name="ext.service.provider.date"><text>ext. Datum:</text></Label>
    <DateComponent name="ext.service.provider.date">
    	<tooltip>Datum, zu dem der ext. Dienstleister beauftragt wurde</tooltip>
    	<format type="date">dd.MM.yyyy</format>
    </DateComponent>
    
    <Label name="working.hours"><text>Arbeitsstunden:</text></Label>
    <FormattedTextField name="working.hours">
        <tooltip>Anzahl der aufgewendeten Arbeitsstunden</tooltip>
        <columns>15</columns>
        <format type="number">####0.00</format>
    </FormattedTextField>
    
</sf>