<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd"
       default-lazy-init="true">

    <tx:annotation-driven proxy-target-class="true" />

    <bean id="de.mnet.wita.acceptance.common.AcceptanceTestDataBuilder" class="de.mnet.wita.acceptance.common.AcceptanceTestDataBuilder" scope="prototype" />
    <bean id="de.mnet.wita.acceptance.common.KftStandortDataBuilder"
          class="de.mnet.wita.acceptance.common.KftStandortDataBuilder"/>
    <bean id="de.mnet.wita.acceptance.common.AccStandortDataBuilder" class="de.mnet.wita.acceptance.common.AccStandortDataBuilder" scope="prototype" />

    <!-- Entity builders -->
    <bean class="de.mnet.wita.message.builder.meldung.ErledigtMeldungBuilder" scope="prototype" />
    <bean class="de.mnet.wita.model.IoArchiveBuilder" scope="prototype" />
    <bean class="de.mnet.wita.model.AkmPvUserTaskBuilder" scope="prototype"/>
    <bean class="de.mnet.wita.model.TamUserTaskBuilder" scope="prototype"/>
    <bean class="de.mnet.wita.model.VorabstimmungBuilder" scope="prototype" />
    <bean class="de.mnet.wita.model.VorabstimmungAbgebendBuilder" scope="prototype" />
    <bean class="de.mnet.wita.model.WitaCBVorgangBuilder" scope="prototype" />
    <bean class="de.mnet.wita.model.WitaCBVorgangAnlageBuilder" scope="prototype" />
    <bean class="de.mnet.wita.model.WitaSendCountBuilder" scope="prototype" />
    <bean class="de.mnet.wita.model.WitaConfigBuilder" scope="prototype" />

    <bean id="de.mnet.wita.acceptance.common.AcceptanceTestWorkflow" class="de.mnet.wita.acceptance.common.AcceptanceTestWorkflow" scope="prototype" />
    <bean id="de.mnet.wita.acceptance.common.AcceptanceTestWorkflowService" class="de.mnet.wita.acceptance.common.AcceptanceTestWorkflowService"  />
    <bean id="de.mnet.wita.acceptance.common.WitaMessageAssertionTestService" class="de.mnet.wita.acceptance.common.WitaMessageAssertionTestService"  />

    <bean id="de.mnet.wita.service.DateTimeCalculationService" class="de.mnet.wita.service.impl.DateTimeCalculationService" />

    <bean id="de.mnet.wita.dao.IoArchiveDao" class="de.mnet.wita.dao.impl.IoArchiveDaoImpl" primary="true"/>

    <!-- WBCI Dao for Tests -->
    <bean id="de.mnet.wbci.dao.WbciDao" class="de.mnet.wbci.dao.impl.WbciDaoImpl" primary="true"/>

    <!-- versuchen KFT-Service wieder zu entfernen wenn die WITA-Accpetancetest auf Citrus basieren -->
    <bean id="de.mnet.wita.integration.LineOrderKftService" class="${remoting.proxy}">
        <property name="serviceUrl" value="${remoting.base.url}/wita/LineOrderKftService"/>
        <property name="serviceInterface" value="de.mnet.wita.integration.LineOrderKftService"/>
    </bean>

    <bean id="lineOrderService" class="org.mockito.Mockito" factory-method="mock" lazy-init="false">
        <constructor-arg value="de.mnet.wita.integration.LineOrderService"/>
    </bean>

    <!-- Taifun database -->
    <bean id="taifunDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${jdbc.driver.class}"/>
        <property name="url" value="${taifun.db.url}"/>
        <property name="username" value="${taifun.db.user}"/>
        <property name="password" value="${taifun.db.password}"/>
        <property name="initialSize" value="1"/>
        <property name="maxActive" value="5"/>
        <property name="maxIdle" value="2"/>
    </bean>

</beans>
