<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure_9_0.dtd">
<Configure id="Server" class="org.eclipse.jetty.server.Server">

    <!-- configuration file for the WITA-accpetance tests -->
    <Set name="connectors">
        <Array type="org.eclipse.jetty.server.Connector">
            <Item>
                <New class="org.eclipse.jetty.server.ServerConnector">
                    <Arg>
                        <Ref refid="Server"/>
                    </Arg>
                    <Set name="port">
                        <SystemProperty name="hurrican.jetty.port"/>
                    </Set>
                    <Set name="name">instance_HUR</Set>
                </New>
            </Item>
            <Item>
                <New class="org.eclipse.jetty.server.ServerConnector">
                    <Arg>
                        <Ref refid="Server"/>
                    </Arg>
                    <Set name="port">
                        <SystemProperty name="atlas-simulator.jetty.port"/>
                    </Set>
                    <Set name="name">instance_ATLAS_SIM</Set>
                </New>
            </Item>
        </Array>
    </Set>

</Configure>