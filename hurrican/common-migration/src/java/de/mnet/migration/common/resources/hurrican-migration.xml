<?xml version="1.0" encoding="UTF-8"?>
<!-- Basis Spring Context fuer alle Migrationen -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean id="cc.dataSource.hurrican" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces"><value>javax.sql.DataSource</value></property>
        <property name="target" ref="cc.dataSourceTarget"/>
        <property name="interceptorNames">
            <list>
                <value>cc.setSchemaInterceptor</value>
            </list>
        </property>
    </bean>
    <bean id="cc.dataSource" class="org.springframework.jdbc.datasource.TransactionAwareDataSourceProxy">
        <property name="targetDataSource" ref="cc.dataSource.hurrican"/>
    </bean>
    <alias name="cc.dataSource" alias="hurricanDataSource"/>

    <alias name="cc.hibernateTxManager" alias="transactionManager"/>
    <alias name="cc.sessionFactory" alias="sessionFactory"/>

</beans>
