<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>hurrican-gui</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>*:jre:zip:${jre.version.windows}</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>ak-hurrican-gui</outputDirectory>
            <fileMode>755</fileMode>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/hurrican-gui-tmp/ak-hurrican-gui</directory>
            <outputDirectory>ak-hurrican-gui</outputDirectory>
            <excludes>
                <exclude>config/*</exclude>
                <exclude>ak-hurrican-gui.bat.template</exclude>
                <exclude>HurricanII.lnk</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/hurrican-gui-tmp/ak-hurrican-gui/config</directory>
            <outputDirectory>ak-hurrican-gui/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>hurrican/templates/ak-hurrican-gui.properties</source>
            <destName>ak-hurrican-gui/config/ak-hurrican-gui.properties</destName>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/hurrican-gui-tmp/ak-hurrican-gui/ak-hurrican-gui.bat.template</source>
            <destName>ak-hurrican-gui/ak-hurrican-gui.bat</destName>
            <filtered>true</filtered>
        </file>
        <file>
            <source>hurrican/templates/cp-hurrican-gui.sh</source>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>hurrican/templates/rm-hurrican-gui.sh</source>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </file>
    </files>
</assembly>
