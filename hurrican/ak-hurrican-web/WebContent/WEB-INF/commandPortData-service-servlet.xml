<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />

    <!-- Endpoint Definition, ueber den Port-Daten von Command importiert werden. -->
    <bean id="commandPortDataRequestEndpoint"
        class="de.mnet.hurrican.webservice.command.port.enpoint.CommandPortDataRequestEndpoint">
        <property name="marshaller" ref="xmlBeanMarshaller" />
        <property name="unmarshaller" ref="xmlBeanMarshaller" />
    </bean>

    <!-- Definition of the Endpoint-Mapping(s) -->
    <bean class="org.springframework.ws.server.endpoint.mapping.PayloadRootQNameEndpointMapping">
        <property name="mappings">
            <props>
                <prop key="{http://mnet.de/hurricanweb/command/port/types}CommandPortDataRequest">commandPortDataRequestEndpoint</prop>
            </props>
        </property>
        <property name="interceptors">
            <list>
                <bean class="org.springframework.ws.server.endpoint.interceptor.PayloadLoggingInterceptor"/>
                <bean class="org.springframework.ws.soap.server.endpoint.interceptor.SoapEnvelopeLoggingInterceptor"/>
            </list>
        </property>
    </bean>

    <!-- Definition des zu verwendenden Marshallers -->
    <bean id="xmlBeanMarshaller" class="org.springframework.oxm.xmlbeans.XmlBeansMarshaller" />

    <!-- Publishing the WSDL -->
    <!-- WSDL Generierung ueber http://host:port/hurricanweb/command/port/commandPortData.wsdl -->
    <bean id="commandPortData" class="org.springframework.ws.wsdl.wsdl11.DefaultWsdl11Definition">
        <property name="schema" ref="commandPortDataSchema"/>
        <property name="portTypeName" value="CommandPortDataWebService"/>
        <property name="serviceName" value="CommandPortData"/>
        <property name="locationUri" value="http://localhost:8080/hurricanweb/command/port"/>
        <property name="targetNamespace" value="http://mnet.de/hurricanweb/command/port/types/"/>
        <property name="requestSuffix" value="Request" />
        <property name="responseSuffix" value="RequestResponse" />
        <property name="faultSuffix" value="RequestFailure" />
        <property name="createSoap12Binding" value="false"/>
        <property name="soapActions">
            <props>
                <prop key="CommandPortDataRequest">setCommandPortDataRequest</prop>
            </props>
        </property>
    </bean>
    <bean id="commandPortDataSchema" class="org.springframework.xml.xsd.SimpleXsdSchema">
        <property name="xsd" value="classpath:command/commandPortDataRequest.xsd"/>
    </bean>

    <!-- SOAP message factory. Configured to use SOAP 1.1 -->
    <bean id="messageFactory" class="org.springframework.ws.soap.saaj.SaajSoapMessageFactory">
        <property name="soapVersion">
            <util:constant static-field="org.springframework.ws.soap.SoapVersion.SOAP_11"/>
        </property>
    </bean>

    <bean id="exceptionResolver"
          class="de.mnet.hurrican.webservice.command.port.CommandPortSoapFaultDefinitionExceptionResolver">
        <property name="defaultFault" value="SERVER"/>
        <property name="exceptionMappings">
            <value>
            de.mnet.hurrican.webservice.command.base.CommandException=SERVER,FaultMsg
            </value>
        </property>
    </bean>

</beans>

