<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.mnet.hurrican</groupId>
    <artifactId>wbci-acceptance-test</artifactId>
    <name>${project.artifactId}</name>
    <packaging>jar</packaging>

    <parent>
        <groupId>de.mnet.hurrican</groupId>
        <artifactId>hurrican-parent</artifactId>
        <version>27.0.0-SNAPSHOT</version>
        <relativePath>../parent</relativePath>
    </parent>

    <properties>
        <!-- don't run any tests on build time, use command-line option -DskipAcceptanceTests=false to run acceptance tests -->
        <skipAcceptanceTests>true</skipAcceptanceTests>
        <use.kft.simulator>false</use.kft.simulator>
        <citrus.log4j-xml>${pom.basedir}/src/citrus/resources/log4j.xml</citrus.log4j-xml>
    </properties>

    <dependencies>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>ak-hurrican-base</artifactId>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>ak-hurrican-base</artifactId>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>test-data-generator</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>hurrican-wita</artifactId>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>mnet-wita-wsdl</artifactId>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>hurrican-wita</artifactId>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>ak-authentication</artifactId>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>ak-commons</artifactId>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>mnet-wbci-format</artifactId>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>de.mnet.hurrican</groupId>
            <artifactId>simulator-common</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.consol.citrus</groupId>
            <artifactId>citrus-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.consol.citrus</groupId>
            <artifactId>citrus-jms</artifactId>
        </dependency>
        <dependency>
            <groupId>com.consol.citrus</groupId>
            <artifactId>citrus-ws</artifactId>
        </dependency>
        <dependency>
            <groupId>com.consol.citrus</groupId>
            <artifactId>citrus-java-dsl</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>net.java.dev.rome</groupId>
                    <artifactId>rome-fetcher</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.consol.citrus</groupId>
            <artifactId>citrus-mail</artifactId>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <!-- Vom parent POM wird scope=test geerbt, daher muss compile hier explizit angegeben werden. -->
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>true</skipTests>
                    <failIfNoTests>false</failIfNoTests>
                </configuration>
                <executions>
                    <execution>
                        <id>wbci-acceptance-tests</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <skipTests>${skipAcceptanceTests}</skipTests>
                            <systemPropertyVariables>
                                <citrus.file.encoding>UTF-8</citrus.file.encoding>
                                <use.kft.simulator>${use.kft.simulator}</use.kft.simulator>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>activemq-embedded</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.activemq.tooling</groupId>
                        <artifactId>activemq-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>start-activemq</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <fork>true</fork>
                            <systemProperties>
                                <property>
                                    <name>log4j.configuration</name>
                                    <value>${citrus.log4j-xml}</value>
                                </property>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>jetty-embedded</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.eclipse.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <configuration>
                            <daemon>false</daemon>
                            <reload>manual</reload>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start-hurricanweb</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deploy-war</goal>
                                </goals>
                                <configuration>
                                    <daemon>true</daemon>
                                    <war>
                                        ${settings.localRepository}/de/mnet/hurrican/hurrican-web/${project.version}/hurrican-web-${project.version}.war
                                    </war>
                                    <webAppConfig>
                                        <contextPath>/hurricanweb</contextPath>
                                    </webAppConfig>
                                    <stopPort>${hurricanweb.stop.port}</stopPort>
                                    <stopKey>${hurricanweb.stop.key}</stopKey>
                                    <systemProperties>
                                        <systemProperty>
                                            <name>jetty.port</name>
                                            <value>${hurricanweb.http.port}</value>
                                        </systemProperty>
                                        <systemProperty>
                                            <name>file.encoding</name>
                                            <value>UTF-8</value>
                                        </systemProperty>
                                        <systemProperty>
                                            <name>use.config</name>
                                            <value>${use.config}</value>
                                        </systemProperty>
                                        <systemProperty>
                                            <name>catalina.base</name>
                                            <value>${project.build.directory}</value>
                                        </systemProperty>
                                        <systemProperty>
                                            <name>log4j.configuration</name>
                                            <value>${citrus.log4j-xml}</value>
                                        </systemProperty>
                                    </systemProperties>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stop-hurricanweb</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                                <configuration>
                                    <stopPort>${hurricanweb.stop.port}</stopPort>
                                    <stopKey>${hurricanweb.stop.key}</stopKey>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>acceptance-wbci-kft</id>
            <properties>
                <skipAcceptanceTests>false</skipAcceptanceTests>
                <test.groups>kft</test.groups>
            </properties>
        </profile>

        <profile>
            <id>acceptance-wbci-all</id>
            <properties>
                <skipAcceptanceTests>false</skipAcceptanceTests>
                <test.groups>kft,acceptance</test.groups>
            </properties>
        </profile>
    </profiles>
</project>
