<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="true">

    <context:annotation-config />
    <context:component-scan base-package="de.augustakom.hurrican.service.location"/>

    <!-- ServiceCommand, um GeoIDs ueber ein Excel-File mit Strassennamen an KVZ zu importieren  -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.geoid.ImportGeoIdKVZExcelCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.geoid.ImportGeoIdKVZExcelCommand" scope="prototype" />

    <!-- ServiceCommand, um GeoIDs ueber ein Excel-File mit VDSL an HVT zu importieren  -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.geoid.ImportGeoIdVDSLExcelCommand"
        class="de.augustakom.hurrican.service.cc.impl.command.geoid.ImportGeoIdVDSLExcelCommand" scope="prototype" />

</beans>
