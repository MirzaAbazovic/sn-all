<?xml version="1.0" encoding="UTF-8"?>
<!--
Spring-Konfigurationsdatei fuer die CPS-Services im CustomerCare-Bereich.
Die Datei wird von CCServices.xml importiert!

-->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="true">

    <context:annotation-config/>

    <!-- Definition des zu verwendenden Marshallers -->
    <bean id="cps.marshaller" class="org.springframework.oxm.xmlbeans.XmlBeansMarshaller"/>

    <!-- Definition des zu verwendenden Un-Marshallers -->
    <bean id="cps.unmarshaller" class="org.springframework.oxm.xmlbeans.XmlBeansMarshaller">
        <property name="xmlOptions" ref="cps.unmarshall.options"/>
    </bean>
    <bean id="cps.unmarshall.options" class="org.springframework.oxm.xmlbeans.XmlOptionsFactoryBean">
        <property name="options">
            <map>
                <entry>
                    <!-- Namespace-Mapping fuer setLoadSubstitudeNamespaces definieren -->
                    <key>
                        <value>LOAD_SUBSTITUTE_NAMESPACES</value>
                    </key>
                    <ref bean="cps.namespace.map"/>
                </entry>
            </map>
        </property>
    </bean>
    <bean id="cps.namespace.map" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="" value="http://www.evolving.com/wsdl/sa/v1/types"/>
                <entry key="http://InputMessageNamespace" value="http://www.evolving.com/wsdl/sa/v1/types"/>
                <entry key="http://OutputMessageNamespace" value="http://www.evolving.com/wsdl/sa/v1/types"/>
                <entry key="http://FaultMessageNamespace" value="http://www.evolving.com/wsdl/sa/v1/types"/>
            </map>
        </constructor-arg>
    </bean>

    <!-- Definition der SOAP Version -->
    <bean id="org.springframework.ws.soap.SoapVersion.SOAP_12"
          class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean"/>

    <!-- MessageFactory fuer den WebService -->
    <bean id="cps.wsMessageFactory" class="org.springframework.ws.soap.saaj.SaajSoapMessageFactory">
        <property name="soapVersion" ref="org.springframework.ws.soap.SoapVersion.SOAP_12"/>
    </bean>

    <!-- WebService-Template Definition inkl. Un-/Marshaller -->
    <bean id="cpsWSTemplate" class="de.augustakom.common.tools.ws.MnetWebServiceTemplate">
        <property name="marshaller" ref="cps.marshaller"/>
        <property name="unmarshaller" ref="cps.unmarshaller"/>
        <property name="messageFactory" ref="cps.wsMessageFactory"/>
        <property name="messageSender" ref="httpSender"/>
    </bean>

    <!-- HTTP Sender configured to define timeouts (in ms) -->
    <bean id="httpSender" class="org.springframework.ws.transport.http.HttpComponentsMessageSender">
        <property name="httpClient" ref="httpClient"/>
    </bean>

    <!-- Service-Definition fuer notwendige Konfigurationsdaten im CPS-Bereich -->
    <bean id="de.augustakom.hurrican.service.cc.CPSConfigService"
          class="de.augustakom.hurrican.service.cc.impl.CPSConfigServiceImpl">
        <property name="DAO" ref="cpsTransactionDAO"/>
    </bean>

    <!-- Service-Definition fuer die Verwaltung von CPS-Transactions -->
    <bean id="de.augustakom.hurrican.service.cc.CPSService"
          class="de.augustakom.hurrican.service.cc.impl.CPSServiceImpl">
        <property name="DAO" ref="cpsTransactionDAO"/>
    </bean>

    <!-- Definition der abstrakten CPSCommand Klasse -->
    <bean id="abstract.cps.command" class="de.augustakom.hurrican.service.cc.impl.command.cps.AbstractCPSCommand"
          abstract="true">
        <property name="cpsService" ref="de.augustakom.hurrican.service.cc.CPSService"/>
        <property name="queryCCService" ref="de.augustakom.hurrican.service.cc.QueryCCService"/>
        <property name="produktService" ref="de.augustakom.hurrican.service.cc.ProduktService"/>
        <property name="referenceService" ref="de.augustakom.hurrican.service.cc.ReferenceService"/>
        <property name="ccLeistungsService" ref="de.augustakom.hurrican.service.cc.CCLeistungsService"/>
        <property name="hwService" ref="de.augustakom.hurrican.service.cc.HWService"/>
        <property name="physikService" ref="de.augustakom.hurrican.service.cc.PhysikService"/>
    </bean>

    <!--
    Command-Klasse, um eine CPS-Transaction, die den Status einer CPS-Transaction ermittelt, anzulegen.
    -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTxQueryCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTxQueryCommand"
          scope="prototype"
          parent="abstract.cps.command">
        <property name="xmlMarshaller" ref="xstreamMarshaller"/>
        <property name="cpsWebServiceTemplate" ref="cpsWSTemplate"/>
    </bean>

    <!--
    Command-Klasse, die via CPS fuer einen techn. Auftrag die Attainable Bitrate auf dem DSLAM ermittelt
    -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CPSQueryAttainableBitrateCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CPSQueryAttainableBitrateCommand"
          scope="prototype"
          parent="abstract.cps.command">
        <property name="xmlMarshaller" ref="xstreamMarshaller"/>
        <property name="cpsWebServiceTemplate" ref="cpsWSTemplate"/>
    </bean>

    <!--
    Command-Definition, ueber die eine CPS-Transaction angelegt wird.
    Ausserdem ruft das Command eine ServiceChain auf, ueber die die ServiceOrder-Datas
    fuer die Provisionierung ermittelt werden.
    -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTxCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTxCommand"
          scope="prototype"
          parent="abstract.cps.command" >
        <property name="xmlMarshaller" ref="xstreamMarshaller"/>
        <property name="cpsConfigService" ref="de.augustakom.hurrican.service.cc.CPSConfigService"/>
        <property name="chainService" ref="de.augustakom.hurrican.service.cc.ChainService"/>
        <property name="ccAuftragService" ref="de.augustakom.hurrican.service.cc.CCAuftragService"/>
        <property name="baService" ref="de.augustakom.hurrican.service.cc.BAService"/>
        <property name="niederlassungService" ref="de.augustakom.hurrican.service.cc.NiederlassungService"/>
        <property name="physikService" ref="de.augustakom.hurrican.service.cc.PhysikService"/>
        <property name="ccLeistungsService" ref="de.augustakom.hurrican.service.cc.CCLeistungsService"/>
        <property name="endstellenService" ref="de.augustakom.hurrican.service.cc.EndstellenService"/>
    </bean>

    <!--
    Command-Definition, um ein Lazy-Init durchzufuehren.
    -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4LazyInitCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4LazyInitCommand"
          scope="prototype"
          parent="abstract.cps.command">
        <property name="xmlMarshaller" ref="xstreamMarshaller"/>
        <property name="cpsWebServiceTemplate" ref="cpsWSTemplate"/>
    </bean>

    <!--
    Command-Definition, um CPS-Tx fuer Provisionierungsauftraege zu generieren.
    Die TransactionProxyFactoryBean kann nicht verwendet werden, da die Command-Klasse
    als Prototype (kein Singleton) verwendet werden soll.
    -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4BACommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4BACommand"
          init-method="init"
          scope="prototype"
          parent="abstract.cps.command">
        <property name="cpsTransactionDAO" ref="cpsTransactionDAO"/>
        <property name="baService" ref="de.augustakom.hurrican.service.cc.BAService"/>
        <property name="baConfigService" ref="de.augustakom.hurrican.service.cc.BAConfigService"/>
        <property name="ccAuftragService" ref="de.augustakom.hurrican.service.cc.CCAuftragService"/>
        <property name="physikService" ref="de.augustakom.hurrican.service.cc.PhysikService"/>
    </bean>

    <!-- Command-Definition, um CPS-Tx bei Aenderungen von Rufnummern-Leistungen zu generieren. -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4DNServicesCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4DNServicesCommand"
          init-method="init"
          scope="prototype"
          parent="abstract.cps.command">
        <property name="cpsTransactionDAO" ref="cpsTransactionDAO"/>
        <property name="ccRufnummernService" ref="de.augustakom.hurrican.service.cc.CCRufnummernService"/>
        <property name="ccAuftragService" ref="de.augustakom.hurrican.service.cc.CCAuftragService"/>
        <property name="baService" ref="de.augustakom.hurrican.service.cc.BAService"/>
    </bean>

    <!-- Command-Definition, um CPS-Tx fuer (Ent-)Sperren zu generieren. -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4LockCommand"
