        <property name="cpsWebServiceTemplate" ref="cpsWSTemplate"/>
        <property name="cpsGetDataService" ref="de.augustakom.hurrican.service.cc.CPSGetDataService"/>
    </bean>

    <!-- Cancel Command fuer CPS-Transaction -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CancelCPSTxCommand"
