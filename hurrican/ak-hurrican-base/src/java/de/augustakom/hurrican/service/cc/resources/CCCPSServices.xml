          parent="abstract.cps.command">
        <property name="ccRufnummernService" ref="de.augustakom.hurrican.service.cc.CCRufnummernService"/>
        <property name="lockService" ref="de.augustakom.hurrican.service.cc.LockService"/>
    </bean>

    <!-- Definition der abstrakten CPSDataCommand Klasse -->
    <bean id="abstract.data.command" class="de.augustakom.hurrican.service.cc.impl.command.cps.AbstractCPSDataCommand"
          abstract="true" parent="abstract.cps.command">
        <property name="dslamService" ref="de.augustakom.hurrican.service.cc.DSLAMService"/>
        <property name="ccAuftragService" ref="de.augustakom.hurrican.service.cc.CCAuftragService"/>
    </bean>

    <!-- Command-Definition, um Telephonie-Daten (EWSD) zu ermitteln -->
