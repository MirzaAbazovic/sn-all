    <!-- Command-Definition, um Daten fuer MVS Site zu ermitteln -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.mvs.CPSGetMVSSiteDataCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.mvs.CPSGetMVSSiteDataCommand"
          init-method="init"
