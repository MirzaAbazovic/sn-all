          init-method="init"
          scope="prototype"
          parent="abstract.data.command">
        <property name="ccRufnummernService" ref="de.augustakom.hurrican.service.cc.CCRufnummernService"/>
        <property name="endstellenService" ref="de.augustakom.hurrican.service.cc.EndstellenService"/>
        <property name="hvtService" ref="de.augustakom.hurrican.service.cc.HVTService"/>
        <property name="hwService" ref="de.augustakom.hurrican.service.cc.HWService"/>
        <property name="rangierungsService" ref="de.augustakom.hurrican.service.cc.RangierungsService"/>
    </bean>

    <!-- Command-Definition, um Telephonie-Daten (VoIP) zu ermitteln -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetVoIPDataCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetVoIPDataCommand"
          init-method="init"
          scope="prototype"
          parent="abstract.data.command">
        <property name="ccRufnummernService" ref="de.augustakom.hurrican.service.cc.CCRufnummernService"/>
        <property name="voipService" ref="de.augustakom.hurrican.service.cc.VoIPService"/>
        <property name="auftragService" ref="de.augustakom.hurrican.service.cc.CCAuftragService"/>
    </bean>

    <!-- Command-Definition, um DSL-Daten zu ermitteln -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetDSLDataCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetDSLDataCommand"
          scope="prototype"
          parent="abstract.data.command"
          init-method="init">
        <property name="regularExpressionService" ref="de.augustakom.hurrican.service.cc.RegularExpressionService"/>
        <property name="endstellenService" ref="de.augustakom.hurrican.service.cc.EndstellenService"/>
        <property name="rangierungsService" ref="de.augustakom.hurrican.service.cc.RangierungsService"/>
        <property name="hwService" ref="de.augustakom.hurrican.service.cc.HWService"/>
        <property name="hvtService" ref="de.augustakom.hurrican.service.cc.HVTService"/>
        <property name="physikService" ref="de.augustakom.hurrican.service.cc.PhysikService"/>
        <property name="crossConnectionService" ref="de.augustakom.hurrican.service.cc.EQCrossConnectionService"/>
        <property name="referenceService" ref="de.augustakom.hurrican.service.cc.ReferenceService"/>
        <property name="pbitHelper" ref="pbitHelper"/>
    </bean>

    <!-- Command-Definition, um (optional) DSL-Daten zu ermitteln -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetDSLOptionalDataCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetDSLOptionalDataCommand"
          scope="prototype" 
          parent="abstract.data.command" 
          init-method="init">
        <property name="ccAuftragService" ref="de.augustakom.hurrican.service.cc.CCAuftragService"/>
        <property name="regularExpressionService" ref="de.augustakom.hurrican.service.cc.RegularExpressionService"/>
        <property name="endstellenService" ref="de.augustakom.hurrican.service.cc.EndstellenService"/>
        <property name="rangierungsService" ref="de.augustakom.hurrican.service.cc.RangierungsService"/>
        <property name="hwService" ref="de.augustakom.hurrican.service.cc.HWService"/>
        <property name="hvtService" ref="de.augustakom.hurrican.service.cc.HVTService"/>
        <property name="physikService" ref="de.augustakom.hurrican.service.cc.PhysikService"/>
        <property name="crossConnectionService" ref="de.augustakom.hurrican.service.cc.EQCrossConnectionService"/>
        <property name="referenceService" ref="de.augustakom.hurrican.service.cc.ReferenceService"/>
        <property name="pbitHelper" ref="pbitHelper"/>
    </bean>

    <!-- Command-Definition, um DSL-Daten zu ermitteln -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetSdslDataCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetSdslDataCommand"
          scope="prototype" 
          parent="abstract.data.command" 
          init-method="init">
        <property name="regularExpressionService" ref="de.augustakom.hurrican.service.cc.RegularExpressionService"/>
        <property name="endstellenService" ref="de.augustakom.hurrican.service.cc.EndstellenService"/>
        <property name="rangierungsService" ref="de.augustakom.hurrican.service.cc.RangierungsService"/>
        <property name="hwService" ref="de.augustakom.hurrican.service.cc.HWService"/>
        <property name="hvtService" ref="de.augustakom.hurrican.service.cc.HVTService"/>
    </bean>

    <bean id="pbitHelper" class="de.augustakom.hurrican.service.cc.impl.command.cps.PbitHelper"/>
    <bean id="cpsFacade" class="de.augustakom.hurrican.service.cc.impl.command.cps.CpsFacade"/>

    <!-- Command-Definition, um Radius-Daten zu ermitteln -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetRadiusDataCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetRadiusDataCommand"
          init-method="init" 
          scope="prototype" 
          parent="abstract.data.command">
    </bean>

    <!-- Command-Definition, um (optional) Radius-Daten zu ermitteln -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetRadiusOptionalDataCommand"
          class="de.augustakom.hurrican.service.cc.impl.command.cps.CPSGetRadiusOptionalDataCommand"
          init-method="init" 
          scope="prototype" 
          parent="abstract.data.command">
        <property name="accountService" ref="de.augustakom.hurrican.service.cc.AccountService"/>
        <property name="ccLeistungsService" ref="de.augustakom.hurrican.service.cc.CCLeistungsService"/>
        <property name="vpnService" ref="de.augustakom.hurrican.service.cc.VPNService"/>
