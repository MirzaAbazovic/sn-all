          scope="prototype"
          parent="abstract.cps.command">
        <property name="cpsTransactionDAO" ref="cpsTransactionDAO"/>
        <property name="lockService" ref="de.augustakom.hurrican.service.cc.LockService"/>
    </bean>

    <!-- Command-Definition, um CPS-Tx zur MDU-Initialisierung zu generieren. -->
    <bean id="de.augustakom.hurrican.service.cc.impl.command.cps.CreateCPSTx4MDUInitCommand"
