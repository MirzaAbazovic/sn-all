<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!--
Hibernate-Mapping fuer das Modell
de.augustakom.hurrican.model.billing.ServiceBlockPrice
-->

<hibernate-mapping package="de.augustakom.hurrican.model.billing">
	<class name="ServiceBlockPrice" table="SERVICE_BLOCK_PRICE">
	    
	    <!-- PrimaryKey -->
		<composite-id>
			<key-property name="leistungNo" column="LEISTUNG_NO" type="long"/>
			<key-property name="quantityFrom" column="QUANTITY_FROM" type="float"/>
		</composite-id>
		
		<!-- Sonstige Fields -->
		<property name="blockQuantity" column="BLOCK_QUANTITY" type="float"/>
		<property name="blockPrice" column="BLOCK_PRICE" type="float"/>

	</class>
	
</hibernate-mapping>