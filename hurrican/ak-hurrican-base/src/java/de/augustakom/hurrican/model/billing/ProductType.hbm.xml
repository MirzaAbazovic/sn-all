<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!--
Hibernate-Mapping fuer das Modell
de.augustakom.hurrican.model.billing.ProductType
-->

<hibernate-mapping package="de.augustakom.hurrican.model.billing">
	<class name="ProductType" table="PRODUCT_TYPE">
	    
	    <!-- PrimaryKey -->
		<id name="productOeNo" column="PRODUCT_OE__NO" unsaved-value="null" type="long">
			<generator class="assigned"/>
		</id>
		
		<!-- Sonstige Fields -->
		<property name="productType" column="PRODUCT_TYPE" type="string"/>
		<property name="connectionType" column="CONNECTION_TYPE" type="string"/>
		<property name="oeNo" column="OE__NO" type="long"/>
		<property name="maxCountDN" column="ANZ_RN" type="integer"/>
		<property name="block" column="BLOCK" type="boolean"/>
	</class>
	
</hibernate-mapping>