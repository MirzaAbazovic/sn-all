<?xml version="1.0" encoding="UTF-8"?>
<!--
GUI-Definitionen fuer den Table Search-Dialog
-->
<sf>

    <Text name="title">Suche</Text>
    <Text name="title.icon">de/augustakom/common/gui/images/search.gif</Text>

    <Label name="search"><text>Suche nach:</text></Label>
    <TextField name="search">
        <tooltip>Text, nach dem in der Tabelle gesucht werden soll</tooltip>
        <columns>15</columns>
    </TextField>

    <Button name="search">
        <text>Suchen</text>
        <tooltip>Sucht nach einer Zelle, die den angegebenen Text enthält</tooltip>
    </Button>

    <Button name="close">
        <text>Schließen</text>
        <tooltip>Schließt den Suchen-Dialog</tooltip>
    </Button>

    <Button name="cancel">
        <text>Abbrechen</text>
        <tooltip>Bricht die Suche ab</tooltip>
    </Button>

    <CheckBox name="chbWC">
        <text>Wildcards als Standard?</text>
        <tooltip>Sucht immer mit Wildcards (*Suchtext*)</tooltip>
    </CheckBox>

    <CheckBox name="chbEX">
        <text>Alle Knoten durchsuchen?</text>
        <tooltip>Lädt die Daten zu allen Unterknoten während der Suche</tooltip>
    </CheckBox>

    <Label name="info"><text> </text></Label>

</sf>